# rakefile for compiling gistapi and tests

require 'rake/clean'
require 'rake/loaders/makefile'

NAME = "gist"

# directories
BINDIR = "ebin"

# binaries
APPLICATION = "#{BINDIR}/gist.beam"
TEST = "#{BINDIR}/gistapi.beam"

# main plustache files
SRC_FILES = FileList['src/gistapi.erl']

# include dirs
INCLUDE_DIRS = ["/Library/Erlang"]

# compiler stuff
ERLC = "erlc"
ERL = "erl"
ERLCFLAGS = ["-I #{INCLUDE_DIRS.join(" -I")}", "-o #{BINDIR}", "-pa #{BINDIR}"]
ERLFLAGS = ["-noshell", "-sname #{NAME}"]
APP_FLAGS = ["-DNOTEST"]
TEST_FLAGS = ["-DTEST"]

# task definitions
task :default => :test

desc "task for compiling and executing unit tests"
task :test => TEST do
  sh "#{ERL} #{ERLFLAGS.join(" ")} #{TEST}"
end

# main binary rules
directory BINDIR
file APPLICATION => BINDIR
file APPLICATION do |t|
  sh "#{ERLC} #{ERLCFLAGS.join(" ")} #{APP_FLAGS.join(" ")}"
end

# rules for unit testing
directory BINDIR
file TEST => BINDIR
file TEST do |t|
  sh "#{ERLC} #{ERLCFLAGS.join(" ")} #{TEST_FLAGS.join(" ")} #{SRC_FILES.join(" ")}"
end

# cleaning tasks
CLEAN.include(BINDIR, FileList["**/erl_crash.dump"])

